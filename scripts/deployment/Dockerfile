# Multi-stage Docker build for Google Cloud Run deployment
# Optimized for AI-Powered Refugee Crisis Intelligence System

FROM python:3.9-slim as base

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p logs data/sample models

# Expose port for Cloud Run
EXPOSE 8080

# Set environment variable for Cloud Run port
ENV PORT=8080

# Run the application
CMD ["python", "main.py", "--mode", "demo"]
